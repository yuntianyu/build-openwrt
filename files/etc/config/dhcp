
config dnsmasq
	option domainneeded '1'
	option localise_queries '1'
	option local '/lan/'
	option domain 'lan'
	option expandhosts '1'
	option authoritative '1'
	option readethers '1'
	option leasefile '/tmp/dhcp.leases'
	option ednspacket_max '1232'
	option port '53'
	option dns_redirect '1'
	option allservers '1'
	option min_ttl '3600'
	option dnsforwardmax '4096'
	option localservice '0'
	option rebind_protection '0'
	option cachesize '0'
	option localuse '1'
	option resolvfile '/tmp/resolv.conf.d/resolv.conf.auto'

config dhcp 'lan'
	option interface 'lan'
	option start '100'
	option dhcpv4 'server'
	option force '1'
	option leasetime '1h'
	option limit '5'
	list dhcp_option '6,223.5.5.5,180.76.76.76'

config odhcpd 'odhcpd'
	option maindhcp '0'
	option leasefile '/tmp/hosts/odhcpd'
	option leasetrigger '/usr/sbin/odhcpd-update'
	option loglevel '4'

config dhcp 'guest'
	option interface 'guest'
	option leasetime '1h'
	list dhcp_option '6,221.5.88.8,120.80.88.88'
	option start '100'
	option limit '10'

config dhcp 'FK'
	option interface 'FK'
	option start '100'
	list dhcp_option '6,116.116.116.116,223.5.5.5'
	option leasetime '2m'
	option limit '10'

